# Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# ============================================
# TRESTLE API CREDENTIALS
# ============================================
TRESTLE_CLIENT_ID=your_trestle_client_id
TRESTLE_CLIENT_SECRET=your_trestle_client_secret
TRESTLE_TOKEN_URL=https://api-trestle.corelogic.com/trestle/oidc/token
TRESTLE_API_BASE_URL=https://api-trestle.corelogic.com/trestle/odata

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=America/Los_Angeles

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_LIFETIME=7200
SESSION_SECURE=true
SESSION_HTTPONLY=true

# ============================================
# SECURITY
# ============================================
# Generate a random 32-character string
APP_SECRET_KEY=your_secret_key_here

# ============================================
# API RATE LIMITING
# ============================================
API_RATE_LIMIT=60
API_RATE_PERIOD=60

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=warning
LOG_PATH=/var/log/idx

# ============================================
# CRON JOB PATHS (for reference)
# ============================================
# Token Refresh: */55 * * * * /usr/bin/php /path/to/api/generate_token.php
# Property Sync: 0 * * * * /usr/bin/php /path/to/api/fetch_property.php
